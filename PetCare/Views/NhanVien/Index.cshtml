@model List<Nhanvien>
@{
    Layout = "Admin/_LayoutAdmin";
}

<h2 class="text-center mb-5">Quản Lý Nhân Viên</h2>

<div class="row mb-5">
    <div class="col">
        <a class="btn btn-primary" asp-controller="NhanVien" asp-action="Create">Thêm mới</a>
    </div>
    <div class="col">
    </div>
</div>

<!-- Công việc thêm: Thêm điều kiện kiểm tra dữ liệu nếu như trống thì in dòng "Không có dữ liệu" -->
@if (!Model.Any())
{
    <p class="text-center text-muted">Không có dữ liệu</p>
}
else
{
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Họ & Tên</th>
                <th>Số điện thoại</th>
                <th>Email</th>
                <th>Chức vụ</th>
                <th>Thao Tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var nhanvien in Model)
            {
                <tr>
                    <td>@nhanvien.id_nv</td>
                    <td>@nhanvien.ten_nv</td>
                    <td>@nhanvien.sdt_nv</td>
                    <td>@nhanvien.email_nv</td>
                    <td>@nhanvien.chucvu_nv</td>
                    <td style="white-space: nowrap">
                        <a class="btn btn-primary btn-sm" asp-controller="NhanVien" asp-action="Edit"
                           asp-route-id="@nhanvien.id_nv">Sửa</a>
                        @* <a class="btn btn-danger btn-sm" asp-controller="NhanVien" asp-action="Delete" *@
                        @*    asp-route-id="@nhanvien.id_nv" onclick="return confirm('Chắc chắn xóa nhân viên này?')">Xóa</a> *@
                        <form asp-controller="NhanVien" asp-action="Delete" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@nhanvien.id_nv" />
                            <button type="submit" class="btn btn-danger btn-sm">Xóa</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}


