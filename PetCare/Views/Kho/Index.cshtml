@model IEnumerable<VMKhoSanPham>
@{
    Layout = "Admin/_LayoutAdmin";
}

<h2 class="text-center mb-5">Quản Lý Kho Hàng</h2>

<div class="row mb-5">
    <div class="col">
        <a class="btn btn-primary" asp-asp-controller="Kho" asp-action="Create">Thêm mới</a>
    </div>
    <div class="col">
    </div>
</div>

<!-- Công việc thêm: Thêm điều kiện kiểm tra dữ liệu nếu như trống thì in dòng "Không có dữ liệu" -->
@if (!Model.Any())
{
    <p class="text-center text-muted">Không có dữ liệu</p>
}
else
{
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>STT</th>
                <th>ID Kho</th>
                <th>Ngày nhập</th>
                <th>Sản phẩm</th>
                <th>Số lượng nhập</th>
                <th>Thao Tác</th>
            </tr>
        </thead>
        <tbody>
            @{
                int row = 1;
            }
            @foreach (var kho in Model)
            {
                <tr>
                    <td>@row</td>
                    <td>@kho.id_kho</td>
                    <td>@kho.ngaynhap</td>
                    <td>@kho.ten_sanpham</td>
                    <td>@kho.soluong</td>
                    <td style="white-space: nowrap">
                        <a class="btn btn-primary btn-sm" asp-controller="Kho" asp-action="Edit"
                           asp-route-idKho="@kho.id_kho" asp-route-idSP="@kho.id_sp">Sửa</a>
                        <a class="btn btn-danger btn-sm" asp-controller="Kho" asp-action="Delete"
                           asp-route-id="@kho.id_kho" onclick="return confirm('Chắc chắn xóa sản phẩm này?')">Xóa</a>
                    </td>
                </tr>
                row++;
            }
        </tbody>
    </table>
}

