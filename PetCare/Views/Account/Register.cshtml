@model KhachhangDto
@{
    Layout = "_LayoutAccount";
}
<div class="form-container">
    <div class="mb-3">
        <span class="h4 text-dark text-decoration-none fw-bold" id="signUp">Đăng ký tài khoản</span>
    </div>

    <div class="tab-content">
        <!-- Sign Up Form -->
        <div class="" id="register">
            <form method="post">
                <div class="row mb-3">
                    <div class="col">
                        <label class="form-label">Họ & Tên</label>
                        <input class="form-control" asp-for="ten_kh" placeholder="Nhập Họ & Tên" />
                        <span asp-validation-for="ten_kh" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col">
                        <label class="form-label">Số điện thoại</label>
                        <input class="form-control" asp-for="sdt_kh" placeholder="Nhập Số điện thoại" />
                        <span asp-validation-for="sdt_kh" class="text-danger"></span>
                    </div>
                    <div class="col">
                        <label class="form-label">Email</label>
                        <input class="form-control" asp-for="diachi_kh" placeholder="Nhập Email" />
                        <span asp-validation-for="diachi_kh" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col">
                        <label class="form-label">Mật Khẩu</label>
                        <input class="form-control" asp-for="matkhau_kh" placeholder="Nhập Mật khẩu" />
                        <span asp-validation-for="matkhau_kh" class="text-danger"></span>
                    </div>
                    <div class="col">
                        <label class="form-label">Xác Nhận Mật Khẩu</label>
                        <input type="password" class="form-control" id="confirmPassword" asp-for="ConfirmPassword"
                        name="ConfirmPassword" placeholder="Nhập Mật khẩu xác nhận" />
                        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                    </div>
                </div>

                <div class="d-flex align-items-center justify-content-center pb-4 mt-3">
                    <input class="form-check-input" type="checkbox" id="terms" required>
                    <label class="form-check-label mx-2" for="terms">
                        Tôi đồng ý với <u>Điều khiển và quy định</u>
                    </label>
                </div>
                <button type="submit" class="btn btn-dark w-100">Đăng ký</button>

                <div class="d-flex align-items-center justify-content-center pb-4 mt-2">
                <p class="mb-0 me-2">Đã có tài khoản?</p>
                    <a class="text-dark text-decoration-none mx-2 fw-bold" asp-controller="Account" asp-action="Login">Đăng nhập</a>
                </div>
            </form>
        </div>
    </div>
</div>
