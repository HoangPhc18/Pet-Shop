@model KhachhangDto
@{
    Layout = "Admin/_LayoutAdmin";
}

<h2>Chỉnh Sửa Khách Hàng</h2>

<form method="post">
    <div class="mb-3">
        <label>Tên Khách Hàng</label>
        <input class="form-control" asp-for="ten_kh" />
        <span asp-validation-for="ten_kh" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Số Điện Thoại</label>
        <input class="form-control" asp-for="sdt_kh" />
        <span asp-validation-for="sdt_kh" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Địa Chỉ</label>
        <input class="form-control" asp-for="diachi_kh" />
        <span asp-validation-for="diachi_kh" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Mật Khẩu (để trống nếu không thay đổi)</label>
        <input type="password" class="form-control" asp-for="matkhau_kh" />
    </div>
    <!-- Xác Nhận Mật Khẩu -->
    <div class="row mb-3">
        <label class="col-sm-4 col-form-label">Xác Nhận Mật Khẩu</label>
        <div class="col-sm-8">
            <input type="password" class="form-control" id="ConfirmPassword" name="ConfirmPassword" />
            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Lưu Thay Đổi</button>
    <a class="btn btn-secondary" asp-action="Index">Quay Lại</a>
</form>
