@model ThucungDto
@{
    Layout = "Admin/_LayoutAdmin";
}
<div class="card">
    <h2 class="card-header">Chỉnh Sửa Thú Cưng</h2>
    <div class="card-body">
        <form method="POST" enctype="multipart/form-data">
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">ID Khách Hàng</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="id_kh" value="@ViewData["IDKH"]" />
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Tên Thú Cưng</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="ten_pet" />
                    <span asp-validation-for="ten_pet" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Ngày sinh</label>
                <div class="col-sm-8">
                    <input class="form-control" type="date" asp-for="ngaysinh_pet" />
                    <span asp-validation-for="ngaysinh_pet" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Giống Thú Cưng</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="giong_pet" />
                    <span asp-validation-for="giong_pet" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Cân Nặng</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="cannang_pet" />
                    <span asp-validation-for="cannang_pet" class="text-danger"></span>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Lưu</button>
            <button type="button" href="javascript:history.go(-1)" class="btn btn-danger mx-2">Thoát</button>
        </form>
    </div>
</div>